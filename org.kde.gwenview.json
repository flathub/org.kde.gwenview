                    "sha256": "48549ba76c74d7079d935bece2d3d43186384ae5d14ffde59d55b12c9bcaad05",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/gwenview-$version.tar.xz"
                    }
